set $bg_highlight #292e42
set $terminal_black #414868
set $fg #c0caf5
set $fg_dark #a9b1d6
set $fg_gutter #3b4261
set $dark3 #545c7e
set $comment #565f89
set $dark5 #737aa2
set $blue #7aa2f7
